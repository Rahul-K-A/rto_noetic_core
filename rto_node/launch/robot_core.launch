<launch>
    <arg name="robot_ip" default="10.42.0.5" />
    <arg name="max_linear_velocity" default="0.3" />

    <node name="robotino_drive" pkg="rto_node" type="rto_node" output="screen">
        <param name="hostname" value="$(arg robot_ip)" />
        <param name="max_linear_vel" value="$(arg max_linear_velocity)" />
        <param name="min_linear_vel" value="0.01" />
        <param name="max_angular_vel" value="1.0" />
        <param name="min_angular_vel" value="0.01" />
        <remap from="robotino_joint_states" to="joint_states" />
    </node>

    <node name="robotino_odom" pkg="rto_node" type="robotino_odometry_node" output="screen">
        <param name="hostname" value="$(arg robot_ip)" />
        <remap from="robotino_joint_states" to="joint_states" />
    </node>

    <node pkg="joy" type="joy_node" name="joy_node" >
        <param name="autorepeat_rate" value="20"/>
    </node>
    <node pkg="teleop_twist_joy" type="teleop_node" name="teleop_node" />

</launch>